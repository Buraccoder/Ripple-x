JAVASCRIPT [JS]
window.onload = function() {
  // --- BLOG SECTION ---
  var key = document.getElementById("log");
  var don = document.getElementById("bologsection");

  // --- PROJECT SECTION ---
  var cod = document.getElementById("projectsection");
  var pro = document.getElementById("jects");

  // --- PROFILE SECTION ---
  var ps = document.getElementById("profilesection");
  var now = document.getElementById("pro");

  // Function to hide all
  function hideAll() {
    don.style.display = "none";
    cod.style.display = "none";
    ps.style.display = "none";
  }

  // Show profile first (default)
  hideAll();
  ps.style.display = "block";

  // Button clicks
  key.onclick = function() {
    hideAll();
    don.style.display = "block";
  };

  pro.onclick = function() {
    hideAll();
    cod.style.display = "block";
  };

  now.onclick = function() {
    hideAll();
    ps.style.display = "block";
  };
};

// COMMENTS SECTION
  const submit = document.getElementById("submit");
  const comments = document.getElementById("commentsview");
  const textarea = document.getElementById("textarea");

  submit.onclick = function() {
    if(textarea.value.trim() !== "") {       // optional: prevent empty comments
      comments.innerHTML += "<p>" + textarea.value + "</p>";
      textarea.value = "";
    }
  };

