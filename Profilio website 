     <h3>PYTHON PROJECT 1 </h3>
     <p><span>
     import json

class NotePad:
  def __init__(self):
        self.database = [ ]
      
                                  
        #add new
  def add (self):
        new = input("Enter file: ")
        self.database.append(new)
        print("Added file: ",new)
      
          
        #remove
  def remove(self):
    if not self.database:
            print("No files found")
            return     
    try:      
        print("****Saved files****")
        for i,file in enumerate(self.database,start = 1):
            print(i,"-",file)
        
        delete = int(input("Enter to delete: "))
        if 1 <= delete <= len(self.database):
            deleted = self.database.pop(delete - 1)
            print("Deleted", delete)
    except ValueError:
            print("invalid input,try again.....")  
            
            
            #veiw files
  def view(self):
       if not self.database:
             print("No files found")
       else:   
           print("......Saved files.....") 
           for i,file in enumerate(self.database,start = 1):
                 print(i,"-",file)
            
    
    
      #save 
  def save(self):
       if not self.database:
            print("No files found")
            return
       with open("notebase.json","w") as file:
           json.dump(self.database,file)
       print("Data saved successfully")
       
        #load 
  def load(self):
     try:
       with open("notebase.json","r") as file:
          loaded = json.load(file)
          self.database = loaded
       print("Data loaded successfully")     
       self.view()      
             
     except(FileNotFoundError,EOFError):
        print("No files found")
        
        
       #exit
  def exit(self):
          print("App closed....")
          quit()
          
app = NotePad()
while True:
     print("==== NOTEPAD ====")
     print("Add: a")
     print("Remove: r")
     print("Veiw: v")
     print("load: l")
     print("Exit: e")
     
     start = input("Enter to start: ").lower()
     if start == "a":
         app.add()
     elif start == "r":
        app.remove()
     elif start == "l":
          app.load()
     elif start == "e":
         app.save()
         app.exit()
     elif start == "v":          
          app.view()
     else:
         print("Invaid input,try again.....")
    </span>
     </p>
     
